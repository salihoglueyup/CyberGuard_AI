# ========================================
# CyberGuard AI - Environment Variables
# ========================================
# Bu dosyayi .env olarak kopyalayin ve degerleri duzenleyin
# cp .env.example .env (Linux/Mac)
# copy .env.example .env (Windows)

# ========================================
# APPLICATION SETTINGS
# ========================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Application
APP_NAME=CyberGuard AI
APP_VERSION=2.0.0
APP_HOST=0.0.0.0
APP_PORT=5000
APP_DEBUG=True

# Secret Key (Production'da mutlaka degistirin!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# ========================================
# DATABASE SETTINGS
# ========================================

# PostgreSQL (Production - Recommended)
DATABASE_URL=postgresql://username:password@localhost:5432/cyberguard
# DATABASE_URL=postgresql://user:pass@localhost/cyberguard_ai

# MySQL (Alternative)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/cyberguard

# SQLite (Development Only)
# DATABASE_URL=sqlite:///data/cyberguard.db

# Database Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30

# ========================================
# REDIS SETTINGS (Cache & Sessions)
# ========================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# Session Settings
SESSION_TYPE=redis
SESSION_PERMANENT=False
SESSION_USE_SIGNER=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True

# ========================================
# AI/ML SETTINGS
# ========================================

# OpenAI API
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Anthropic Claude API (Alternative)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-opus-20240229

# Hugging Face
HUGGINGFACE_API_KEY=hf_your-huggingface-token-here
HUGGINGFACE_MODEL=bert-base-uncased

# Local ML Models Path
ML_MODELS_PATH=models/trained
ML_CACHE_PATH=models/cache

# Model Settings
NLP_MODEL_NAME=distilbert-base-uncased
EMBEDDING_DIM=768
MAX_SEQUENCE_LENGTH=512

# ========================================
# CHATBOT SETTINGS
# ========================================

CHATBOT_ENABLED=True
CHATBOT_MAX_CONTEXT=10
CHATBOT_RESPONSE_TIMEOUT=30
CHATBOT_MAX_TOKENS=500
CHATBOT_TEMPERATURE=0.7

# ========================================
# SECURITY SETTINGS
# ========================================

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000
JWT_ALGORITHM=HS256

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGITS=True
PASSWORD_REQUIRE_SPECIAL=True

# Rate Limiting
RATELIMIT_ENABLED=True
RATELIMIT_STORAGE_URL=redis://localhost:6379/1
RATELIMIT_DEFAULT=100 per hour

# CORS Settings
CORS_ENABLED=True
CORS_ORIGINS=http://localhost:3000,http://localhost:5000
CORS_ALLOW_CREDENTIALS=True

# ========================================
# SCANNING SETTINGS
# ========================================

# Scanner
SCANNER_MAX_THREADS=10
SCANNER_TIMEOUT=300
SCANNER_RETRY_COUNT=3
SCANNER_CONCURRENT_SCANS=5

# Port Scanning
PORT_SCAN_TIMEOUT=1
PORT_SCAN_RANGE=1-1024
PORT_SCAN_COMMON_PORTS=21,22,23,25,80,443,3306,5432

# Vulnerability Database
CVE_DATABASE_URL=https://cve.mitre.org/data/downloads/allitems.csv
CVE_UPDATE_INTERVAL=86400

# ========================================
# NOTIFICATION SETTINGS
# ========================================

# Email (SMTP)
SMTP_ENABLED=True
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USE_TLS=True
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_FROM_EMAIL=noreply@cyberguard-ai.com
SMTP_FROM_NAME=CyberGuard AI

# Slack
SLACK_ENABLED=False
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#security-alerts

# Discord
DISCORD_ENABLED=False
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/WEBHOOK

# Telegram
TELEGRAM_ENABLED=False
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-chat-id

# PagerDuty
PAGERDUTY_ENABLED=False
PAGERDUTY_API_KEY=your-pagerduty-api-key
PAGERDUTY_SERVICE_KEY=your-service-key

# ========================================
# LOGGING SETTINGS
# ========================================

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Log Files
LOG_FILE=logs/application.log
ERROR_LOG_FILE=logs/error.log
ACCESS_LOG_FILE=logs/access.log

# Log Rotation
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# External Logging (Sentry)
SENTRY_ENABLED=False
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ========================================
# FILE UPLOAD SETTINGS
# ========================================

UPLOAD_FOLDER=uploads/
MAX_UPLOAD_SIZE=104857600
ALLOWED_EXTENSIONS=txt,pdf,csv,json,log,pcap

# ========================================
# REPORT SETTINGS
# ========================================

REPORT_OUTPUT_DIR=reports/
REPORT_FORMATS=pdf,html,json,csv
REPORT_TEMPLATES_DIR=templates/reports/

# PDF Settings
PDF_PAGE_SIZE=A4
PDF_ORIENTATION=portrait

# ========================================
# CLOUD STORAGE (Optional)
# ========================================

# AWS S3
AWS_ENABLED=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=cyberguard-ai-storage

# Azure Blob Storage
AZURE_ENABLED=False
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_CONTAINER_NAME=cyberguard-storage

# Google Cloud Storage
GCS_ENABLED=False
GCS_PROJECT_ID=your-project-id
GCS_BUCKET_NAME=cyberguard-storage
GCS_CREDENTIALS_FILE=path/to/credentials.json

# ========================================
# MONITORING & ANALYTICS
# ========================================

# Prometheus
PROMETHEUS_ENABLED=False
PROMETHEUS_PORT=9090

# Grafana
GRAFANA_ENABLED=False
GRAFANA_URL=http://localhost:3000

# Google Analytics
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# ========================================
# API KEYS (Third-Party Services)
# ========================================

# VirusTotal
VIRUSTOTAL_API_KEY=your-virustotal-api-key

# Shodan
SHODAN_API_KEY=your-shodan-api-key

# AlienVault OTX
ALIENVAULT_API_KEY=your-alienvault-api-key

# AbuseIPDB
ABUSEIPDB_API_KEY=your-abuseipdb-api-key

# ========================================
# CELERY (Task Queue - Optional)
# ========================================

CELERY_ENABLED=False
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# ========================================
# DOCKER SETTINGS
# ========================================

DOCKER_HOST=unix:///var/run/docker.sock
DOCKER_REGISTRY=docker.io
DOCKER_IMAGE_NAME=cyberguard-ai
DOCKER_IMAGE_TAG=latest

# ========================================
# TESTING SETTINGS
# ========================================

TESTING=False
TEST_DATABASE_URL=sqlite:///test.db
PYTEST_COVERAGE_THRESHOLD=80

# ========================================
# BACKUP SETTINGS
# ========================================

BACKUP_ENABLED=True
BACKUP_SCHEDULE=0 2 * * *
BACKUP_DIR=data/backups/
BACKUP_RETENTION_DAYS=30

# ========================================
# FEATURE FLAGS
# ========================================

FEATURE_CHATBOT=True
FEATURE_ML_DETECTION=True
FEATURE_REAL_TIME_MONITORING=True
FEATURE_AUTOMATED_RESPONSE=False
FEATURE_THREAT_INTELLIGENCE=True
FEATURE_API_V2=True

# ========================================
# ADVANCED SETTINGS
# ========================================

# Threading
WORKERS=4
THREADS_PER_WORKER=2

# Timezone
TIMEZONE=Europe/Istanbul

# Language
DEFAULT_LANGUAGE=tr
SUPPORTED_LANGUAGES=tr,en,es,de,fr

# Pagination
ITEMS_PER_PAGE=25
MAX_ITEMS_PER_PAGE=100

# Cache TTL (seconds)
CACHE_DEFAULT_TTL=300
CACHE_LONG_TTL=3600
CACHE_SHORT_TTL=60

# ========================================
# MAINTENANCE MODE
# ========================================

MAINTENANCE_MODE=False
MAINTENANCE_MESSAGE=Sistem bakımda. Lütfen daha sonra tekrar deneyin.

# ========================================
# END OF CONFIGURATION
# ========================================